<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title PrioQ</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-..." crossorigin="anonymous">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        /* Sidebar and page wrapper styles */
        #wrapper {
            display: flex;
            width: 100%;
            height: 100%;
            align-items: stretch;
        }

        #sidebar-wrapper {
            min-width: 250px;
            max-width: 250px;
            background-color: #343a40;
            color: #fff;
            transition: margin 0.25s ease-out;
            min-height: 100vh;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 1rem;
            font-size: 1.25rem;
            background-color: #23272b;
        }

        #sidebar-wrapper .list-group-item {
            background-color: #343a40;
            border: none;
            color: #adb5bd;
        }

        #sidebar-wrapper .list-group-item:hover {
            background-color: #495057;
            color: #fff;
        }

        #page-content-wrapper {
            flex: 1;
        }

        /* Toggled sidebar (collapsed) */
        #wrapper.toggled #sidebar-wrapper {
            margin-left: -250px;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">PrioQ Navigation</div>
            <div class="list-group list-group-flush">
                <a href="/Command/Manage" class="list-group-item list-group-item-action">Test Commands</a>
                <a href="/Setup/Index" class="list-group-item list-group-item-action">Queue Setup</a>
                <a href="/Reports/Index" class="list-group-item list-group-item-action">Reports</a>
                <a href="/Settings/Index" class="list-group-item list-group-item-action">Settings</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">Toggle Sidebar</button>
                    <div class="collapse navbar-collapse">
                        <!-- Additional navbar items can go here -->
                    </div>
                </div>
            </nav>

            <div class="container-fluid my-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle CDN (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        // Sidebar toggle handler
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
